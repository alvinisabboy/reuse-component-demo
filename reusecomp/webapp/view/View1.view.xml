<mvc:View id="reuseCompView"
    controllerName="demo.suresh.reusecomp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
            <f:SimpleForm id="sfCustomerData"
                editable="false"
                layout="ResponsiveLayout"
                title="Printing (Reuse Component)" >
                <ScrollContainer
                height="100%"
                width="100%"
                horizontal="true"
                vertical="true">
                <FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
                    <FlexBox>
                        <Button id="print" text="Print" press=".onCancelFileUploadPressed"/>
                        <Button id="sendEmail" text="Send Email" press=".onCancelFileUploadPressed"/>
                    </FlexBox>
                    <PDFViewer source="https://help.sap.com/doc/b48499cd7f514ae08f8ec6167e720e28/SHIP/en-US/8c0aacc643c34aeca2ae0ffe9c99cb0d.pdf" isTrustedSource="true" >
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </PDFViewer>
                </FlexBox>
            </ScrollContainer>
            </f:SimpleForm>
</mvc:View>
